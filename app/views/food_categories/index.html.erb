<div class="page-header">
  <h1>
    Food categories
    <a href="/food_categories/new" class="btn btn-lg btn-success">New Food category</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Category name</th>
        <th>Actions</th>
      </tr>

      <% @food_categories.each do |food_category| %>
      <tr>
        <td><%= food_category.category_name %></td>
        <td>
          <a href="/food_categories/<%= food_category.id %>" class="btn btn-primary">Show</a>
          <a href="/food_categories/<%= food_category.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_food_category/<%= food_category.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
